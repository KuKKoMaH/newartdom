.wpcf7-checkbox .wpcf7-list-item, .checkbox
  display: inline-block;
  cursor: pointer;

  input
    display: none

  span
    display: block
    position: relative
    font-size: 23px
    line-height: 1.45
    padding-left: 54px
    anim()
    +media('md')
      font-size: 8px
      padding-left: 27px

    &:before, &:after
      content: ''
      display: block

    &:before
      position: absolute;
      top: 0
      left: 0
      width: 40px
      height: 40px
      background: #f6f6f6
      border: 4px solid #e8e7e7
      anim()

    &:after
      position: absolute
      width: 18px
      height: 18px
      top: 11px
      left: 11px
      background: #70cb4c
      opacity 0
      anim()

  input:checked ~ span
    &:after
      opacity 1

    &:before
      border-color: #70cb4c

  &:hover
    span
      &:before
        background: #f6f6f6
        border-color: #70cb4c

  &--warn
    color: #e53641
