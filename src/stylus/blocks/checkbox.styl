.wpcf7-checkbox .wpcf7-list-item, .checkbox
  display: inline-block;
  cursor: pointer;

  input
    display: none

  span
    display: block
    position: relative
    font-size: 23px
    line-height: 1.45
    padding-left: 54px
    anim()
    +media('md')
      font-size: 16px
      padding-left: 45px;
      padding-top: 3px;
      line-height: 1.5;

    &:before, &:after
      content: ''
      display: block

    &:before
      position: absolute;
      top: 0
      left: 0
      width: 40px
      height: 40px
      background: #f6f6f6
      border: 4px solid #e8e7e7
      anim()
      +media('md')
        width: 30px
        height: 30px

    &:after
      position: absolute
      width: 18px
      height: 18px
      top: 11px
      left: 11px
      background: #70cb4c
      opacity 0
      anim()
      +media('md')
        width: 10px;
        height: 10px;
        top: 10px;
        left: 10px;

  input:checked ~ span
    &:after
      opacity 1

    &:before
      border-color: #70cb4c

  input:disabled ~ span
    opacity: .3
    //&:before
    //  background: #f6f6f6
    //  border: 4px solid #e8e7e7
    //&:after
    //  opacity: 0

  &:hover
    span
      &:before
        background: #f6f6f6
        border-color: #70cb4c

  &--warn
    color: #e53641
