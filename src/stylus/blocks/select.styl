.select
  position: relative;

  &.selectize-control
    position: relative;

    &.wpcf7-not-valid
      .selectize-input
        border-color: red

  .selectize-input
    border: 2px solid $brown2
    background: #ffffff
    padding: 0 40px 0 24px
    position: relative
    white-space: nowrap
    display: flex;
    align-items center
    font-size: 10px
    font-weight: 500
    letter-spacing .3em
    text-transform: uppercase;
    height: 80px
    anim()
    +media('md')
      height: 60px
      font-size: 8px
      padding: 0 40px 0 18px

    &:before, &:after
      content: ''
      display: block
      position: absolute
      right: 18px
      top: 50%
      margin-top: -3px
      border-top: 7px solid $white
      border-left: 6px solid transparent
      border-right: 6px solid transparent

    //anim()

    &:before
      margin-top: -2px
      border-top: 7px solid $brown1

    &.dropdown-active
      &:before, &:after
        transform rotate(180deg)

      &:before
        margin-top: -4px


    &.disabled
      background-color: #dfdfdf

    .item
      vertical-align: top
      display: inline-block
      overflow: hidden
      white-space: nowrap
      text-overflow: ellipsis
      max-width: 100%
      letter-spacing .3em

    input
      font-size: 1em
      display: inline-block
      vertical-align: top
      padding: 0
      min-height: 0
      max-height: none
      max-width: 100%
      margin: 0 2px 0 0
      text-indent: 0
      border: 0 none
      background: none
      line-height: inherit
      -webkit-user-select: auto
      -webkit-box-shadow: none
      box-shadow: none
      letter-spacing .3em
      text-transform: uppercase;

  .selectize-dropdown
    position: absolute
    z-index: 10
    background: #fff
    min-width: 100%;
    border-top: 0
    box-shadow 0 9px 24px rgba($black, .15)

  .selectize-dropdown-content
    max-height 220px
    padding: 20px 0
    height: 100%
    width: 100%

    .option
      margin-right: 31px
      margin-bottom: 10px
      padding: 6px 24px 5px
      white-space: nowrap
      overflow: hidden
      text-overflow: ellipsis
      cursor: pointer
      letter-spacing .3em
      font-size: 10px
      font-weight: 500
      text-transform: uppercase;
      //border-bottom: 1px solid #d5d5d8
      anim()

      &:last-child
        margin-bottom: 0

      &.active
        //background-color: #dfb47a
        background: $brown2
        color: $white


  &--sm
    & .selectize-input
      height: 58px

  &__track
    position: absolute;
    right: 15px
    top: 30px
    bottom: 30px
    width: 1px
    background: #e8e7e6

  &__bar
    position: absolute;
    width: 1px
    background: $brown1
    z-index: 1

