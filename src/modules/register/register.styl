.register
  margin-bottom: 114px
  display: flex;
  flex-wrap wrap
  +media('md')
    margin-bottom: 60px

  &__price
    visibility: hidden;
    font-size: 60px
    margin-right: 47px
    +media('md')
      font-size: 30px

  &__button
    visibility: hidden;
    height: 80px
    padding: 0 42px
    border-radius: 0 40px 40px 0
    background: #ec3434
    color: $black
    font-size: 24px
    line-height: 80px
    font-weight: bold;
    border: 0
    text-decoration: none;
    anim()
    +media('md')
      font-size: 20px
      height: 60px
      border-radius: 0 30px 30px 0
      line-height: 60px
      margin-top: 30px
      padding: 0
      width: 100%
      text-align: center;
      max-width 400px

    &:hover
      color: #fff
