.blogs
  margin-bottom: 120px
  +media('md')
    margin-bottom: 60px

  &__items
    display: flex;
    align-items flex-start
    justify-content center
    flex-wrap wrap
    margin: 0 -15px
    +media('md')
      flex-direction column
      align-items center
      margin: 0 -20px

    &--active
      & ^[0]__item
        &:nth-child(n + 4)
          display: block;

  &__item
    visibility: hidden;
    width: 33.3333%
    //width: 100%
    //max-width: 530px
    //margin: 15px
    padding: 15px
    +media('md')
      width: 100%
      margin: 0 0 30px

    &:nth-child(n + 4)
      display: none;

  &__image
    display: block;
    position: relative;
    width: 100%
    height: 298px
    background-position: 50% 50%
    background-size: cover;
    margin-bottom: 25px
    +media('md')
      margin-bottom: 20px
      height: 200px

    &:after
      content: ''
      position: absolute;
      left: 0
      top: 0
      width: 100%
      height: 100%
      background: #000
      opacity: .6
      anim()

    &:hover
      &:after
        opacity: .3

  &__header
    font-size: 42px
    margin-bottom: 19px
    font-weight: bold;
    +media('md')
      font-size: 32px
      margin-bottom: 15px
      padding: 0 20px

  &__text
    font-size: 23px
    line-height: 1.45
    +media('md')
      font-size: 16px
      padding: 0 20px

  &__btn
    margin-top: 32px
    +media('md')
      margin-top: 20px
      padding: 0 20px

  &__more
    text-align: center;
    margin: 17px 0

    button, a
      position: relative;
      font-weight: bold;
      text-decoration: none;

      &:before
        content: ''
        position: absolute;
        z-index: -1
        left: -9px;
        right: -10px;
        height: 8px;
        bottom: 6px;
        background: #ec3434
        anim()

      &:hover
        &:before
          bottom: 0px
          height: 20px
