.search
  padding-bottom: 100px
  +media('md')
    padding-bottom: 50px

  &__title
    position: relative;
    margin-bottom: 112px
    font-size: 60px
    line-height: 75px
    font-weight: bold;
    color: #ffffff
    +media('md')
      left: 19px
      margin-left: 0
      font-size: 30px
      line-height: 40px
      margin-bottom: 60px

    &:before, &:after, span:before, span:after
      content: ''
      position: absolute;

    &:before
      top: 75px;
      left: -348px;
      width: 560px;
      height: 14px;
      background: #ec3434
      +media('md')
        top: 33px;
        left: -470px;

    &:after
      width: 100px;
      height: 5px;
      background: #1a1616;
      left: -84px;
      top: 89px;
      +media('md')
        top: 47px

    span
      position: relative;
      z-index: 1

      &:before
        right: -20px
        width: 1000px
        height: 75px
        background: #1a1616
        z-index: -1
        +media('md')
          right: -5px;
          height: 40px;

      &:after
        width: 195px
        height: 195px
        background: #ec3434
        border-radius: 50%
        top: -59px;
        left: -13px;
        z-index: -1
        +media('md')
          width: 76px
          height: 76px
          top: -18px;
          left: -8px;


  &__form
    display: flex;
    align-items flex-end
    margin-bottom: 40px
    +media('md')
      flex-direction column
      align-items center

    .input
      flex: 1
      margin-right: 20px
      +media('md')
        margin-right: 0
        margin-bottom: 20px

  &__item
    position: relative;
    display: block;
    border: 2px solid #1a1616
    padding: 30px 36px 14px
    margin-bottom: 18px
    font-size: 23px
    line-height: 1.45
    letter-spacing .01em
    color: #000000
    text-decoration: none;
    anim()
    +media('md')
      font-size: 16px
      padding: 20px 16px 14px

    &:before
      content: ''
      position: absolute;
      width: 90px;
      height: 5px;
      background: #ec3434;
      left: -23px;
      top: 15px;
      anim()

    &:hover
      &:before
        height: 0
