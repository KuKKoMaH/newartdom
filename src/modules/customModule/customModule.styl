.customModule
  position: relative;
  height: 618px
  background-size: cover
  background-position: 50% 50%
  +media('md')
    height: 498px

  &:before
    content: ''
    position: absolute;
    left: 0
    top: 0
    width: 100%
    height: 100%
    background: $black
    opacity: .75

  &__inner
    height: 100%
    display: flex;
    align-items center
    text-align: center;
    justify-content center
    flex-direction column
    position: relative;
    z-index: 1

  &__title
    font-size: 80px
    line-height: 85px
    color: #ffffff
    margin-bottom: 70px
    hyphens: auto
    +media('md')
      font-size: 47px
      line-height: 51px
      margin-bottom: 40px

  &__button
    width: 220px
    height: 80px
    line-height: 80px;
    font-size: 24px
    font-weight: bold;
    border-radius: 0 40px 0 40px
    background: #ec3434
    color: $black
    border: 0
    text-decoration: none;
    anim()
    +media('md')
      font-size: 20px
      width: 180px
      height: 60px
      line-height: 60px
      border-radius: 0 30px 0 30px

    &:hover
      color: #fff
