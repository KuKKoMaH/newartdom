.course
  padding: 120px 0
  +media('md')
    padding: 60px 0

  &__container
    max-width 1560px
    padding: 1px 40px
    margin: 0 auto
    cf()
    +media('md')
      padding: 0 15px

  &__title
    visibility: hidden;
    margin-left: -7vw
    color: #ec3434;
    //font-size: 220px;
    font-size: 11vw;
    line-height: .82
    font-weight: normal;
    z-index: 2;
    margin-top: -200px
    margin-bottom: 80px
    max-width calc(50% + 7vw - 50px)
    hyphens: auto;

    +media-max-width(1750px)
      margin-left: 0
      margin-top: -175px
      font-size: 10vw
      max-width calc(50% - 50px)

    +media('md')
      margin-top: -150px
      margin-bottom: 50px
      font-size: 75px
      max-width 100%


  &__row
    position: relative;
    z-index: 2;

    +media('md')
      margin-top: 60px

  &__placeholder
    width: 50%
    float: right;
    //height: 724px
    //padding-bottom: 44%
    padding-bottom: 40vw
    margin-left: 50px
    +media('md')
      display: none;

  &__text
    font-size: 23px

    > *
      visibility: hidden;
    +media('md')
      font-size: 16px

  &__info
    max-width 50%
    padding-right: 50px
    width: 100%
    +media('md')
      max-width none
      padding-right: 0

  &__header
    font-size: 80px
    line-height: 85px
    margin-bottom: 58px
    hyphens: auto;
    +media('md')
      font-size: 47px
      line-height: 47px
      margin-bottom: 27px

  &__footer
    margin-top: 50px
    display: flex;
    align-items center
    @media screen and (max-width: 1550px)
      flex-direction column
      align-items flex-start

    +media('md')
      margin-top: 24px

  &__aside
    visibility: hidden;
    position: absolute;
    //height: 684px
    padding-bottom: 36%
    top: 0
    right: 0
    width: 50%
    +media('md')
      margin-top: 50px
      position: relative;
      height: 300px
      width: 100%

    .gallery
      position: absolute;
      top: 0
      left: 0
      width: 100%
      height: 100%


  //  display: none;

  &__image
    position: absolute;
    width: 100%
    height: 100%
    background-size: cover
    background-position: 50% 50%

  &__video
    position: absolute;
    top: 0
    left: 0
    width: 100%
    height: 100%

  &__nav
    position: absolute;
    right: 200px
    bottom: -40px
    +media('md')
      right: 50%
      transform translateX(50%)
