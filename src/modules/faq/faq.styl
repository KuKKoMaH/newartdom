.faq
  background: #f6f6f6
  padding-bottom: 100px
  position: relative;
  +media('md')
    padding-bottom: 60px

  &:before
    content ''
    position: absolute;
    left: 50%
    top: 661px;
    margin-left: 199px;
    background: url(../../images/decor.png)
    width 859px
    height 114px

  &__container
    margin: 0 auto
    max-width 1560px
    padding: 0px 20px

  &__title
    position: relative;
    font-size: 60px
    line-height: 42px
    font-weight: bold;
    color: #ffffff
    margin-bottom: 64px
    +media('md')
      font-size: 30px
      line-height: 40px
      margin-bottom: 41px

    &:before, &:after
      content: ''
      position: absolute;

    &:before
      right: 100%
      margin-right: -314px
      width: 560px
      height: 40px
      background: #ec3434
      +media('md')
        right: 100%;
        margin-right: -164px;
        width: 560px;
        height: 20px;
        top: 11px;

    &:after
      top: -16px
      right: 100%
      margin-right: -290px
      width: 1000px
      height: 75px
      background: #1a1616
      +media('md')
        top: 0px;
        right: 100%;
        margin-right: -152px;
        width: 1000px;
        height: 41px;

    span
      position: relative;
      z-index: 1

      &:before, &:after
        content: ''
        position: absolute;

      &:before
        width: 135px
        height: 135px
        background: #ec3434
        border-radius: 50%
        top: -30px;
        left: 46px;
        z-index: -1
        +media('md')
          width: 77px;
          height: 77px;
          top: -18px;
          left: 46px;

      &:after
        width: 100px
        height: 5px
        background: #1a1616
        top: 100%
        right: 100%
        margin-right: 113px;
        margin-top: 32px;
        +media('md')
          margin-top: 0;
          margin-right: -38px;
          top: -11px;

  &__row
    display: flex;
    justify-content space-between
    align-items flex-start
    +media('md')
      flex-direction column

  &__items
    max-width 870px
    margin-top: 73px
    +media('md')
      margin-top: 0

  &__header
    position: relative;
    z-index: 1

    &:before
      content: ''
      position: absolute;
      width: 90px;
      height: 5px;
      background: #ec3434;
      left: -15px;
      top: 31px;
      z-index: -1
      anim()
      +media('md')
        width: 58px;
        left: -6px;
        top: 26px;

    span
      position: relative;
      display: inline-block;
      font-size: 27px
      line-height: 1.25
      font-weight: bold;
      border: 2px solid #1a1616
      padding: 5px 46px 8px 12px
      cursor: pointer;
      anim()
      +media('md')
        font-size: 20px
        line-height: 1.15
        padding: 8px 46px 9px 12px

      &:hover
        &:before
          border-top-color: #ec3434

      &:before, &:after
        content ''
        position: absolute;
        right: 22px;
        top: 23px;
        transform translate(50%, -50%)
        anim(.2s)

      &:before
        border-top: 14px solid $black;
        border-left: 8px solid transparent;
        border-right: 8px solid transparent;

      &:after
        border-top: 8px solid #f6f6f6;
        border-left: 5px solid transparent;
        border-right: 5px solid transparent;
        margin-top: -1px;

  &__body
    max-height 0
    overflow: hidden;
    anim(.3s)

  &__inner
    font-size: 23px;
    line-height: 1.45;
    letter-spacing: .01em;
    padding: 33px 0 11px 14px;
    max-width: 780px;
    +media('md')
      padding: 24px 0 19px 0
      font-size: 16px
      line-height: 1.5


  &__item
    margin-bottom: 20px
    +media('md')
      margin-bottom: 5px

    &--active
      & ^[0]__header
        &:before
          height: 0

        span
          border-color: #ec3434

          &:before, &:after
            transform translate(50%, -50%) rotate(180deg)

          &:after
            margin-top: 1px;


  &__aside
    width: 100%
    max-width 560px
    margin-left: 30px
    +media('md')
      margin-left: 0
      margin-top: 46px

  &__formHeader
    font-size: 80px
    line-height: 85px
    margin-bottom: 35px
    +media('md')
      font-size: 47px
      line-height: 51px
      margin-bottom: 25px

  &__input
    margin-bottom: 27px
    +media('md')
      margin-bottom: 12px

  &__footer
    margin-top: 40px
    text-align: right;
    +media('md')
      margin-top: 20px

    .btn
      padding: 0 51px
      +media('md')
        padding: 0 30px

