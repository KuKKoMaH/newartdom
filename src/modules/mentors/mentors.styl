  &__item
    display: flex;
    margin-bottom: 87px
    +media('md')
      flex-direction column
      align-items center
      margin-bottom: 31px

    &:nth-child(2n)
      flex-direction row-reverse
      +media('md')
        flex-direction column

      & ^[0]__content
        padding-left: 0
        padding-right: 48px
        +media('md')
          padding-right: 0

      & ^[0]__image
        &:before
          top: -33px;
          left: 179px;

        &:after
          top: -5px;
          left: 197px;

  &__image
    visibility: hidden;
    padding-top: 10px
    position: relative;

    img
      border-radius: 50%

