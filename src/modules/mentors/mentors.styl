  &__content
    padding-left: 48px
    +media('md')
      padding-left: 0
      padding-top: 17px

  &__name
    visibility: hidden;
    font-size: 30px
    font-weight: bold;
    +media('md')
      font-size: 20px

  &__description
    visibility: hidden;
    margin-top: 4px
    font-size: 18px
    font-weight: bold;
    color: #ec3434
    +media('md')
      font-size: 12px
      margin-top: 6px

  &__text
    visibility: hidden;
    margin-top: 36px
    font-size: 23px
    line-height: 1.45
    +media('md')
      font-size: 16px
      line-height: 1.5
      margin-top: 15px
