  &__content
    margin: 0 auto
    max-width 1170px
    padding-top: 207px
    +media('md')
      padding: 98px 20px 0

  &__text
    visibility: hidden;
    padding-top: 208px
    //margin-top: 90px
    font-size: 30px
    line-height: 1.4
    +media('md')
      padding-top: 80px
      //margin-top: 40px
      font-size: 20px

  &__principes
    position: relative;
    padding-top: 56px
    @media screen and (max-width: 1550px)
      padding-bottom: 80px
    +media('md')
      padding-top: 294px
      padding-bottom: 55px

  &__items
    position: relative;
    z-index: 1
    display: flex;
    flex-direction column
    align-items flex-end

    &--active
      & ^[0]__item:nth-child(n+5)
        display: block;

