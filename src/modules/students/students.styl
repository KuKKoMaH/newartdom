.students
  background: #f6f6f6 url(img/modulesList-bg.jpg) 100% 0 repeat-y;
  margin-bottom: 120px
  +media('md')
    background-size: 57%;
    margin-bottom: 59px

  &__header
    height: 130px
    display: flex;
    align-items center
    +media('md')
      height: 70px

    span
      visibility: hidden;
      font-size: 54px
      color: #ec3434
      position: relative;
      z-index: 1
      +media('md')
        font-size: 26px

      &:before
        content: ''
        position: absolute;
        background: $black
        left: -13px;
        right: -10px;
        bottom: 13px;
        height: 8px;
        z-index: -1;
        +media('md')
          left: -10px;
          right: -8px;
          bottom: 5px;
          height: 6px;

  &__item
    position: relative;
    padding: 45px 0 40px
    +media('md')
      padding: 30px 0 25px

    &:before
      content: ''
      position: absolute;
      left: 0
      right: 0
      top: 0
      width: 100%
      height: 5px
      background: #ffffff

  &__row
    display: flex;
    align-items flex-start

  &__img
    visibility: hidden;
    margin-right: 48px
    +media('md')
      margin: 0
      position: absolute;
      width: 80px

    img
      max-width 100%
      height: auto;
      border-radius: 50%

  &__content
    flex: 1
    padding-top: 35px
    +media('md')
      padding-top: 3px

  &__name
    visibility: hidden;
    font-size: 30px
    font-weight: bold;
    +media('md')
      font-size: 20px
      padding-left: 105px

  &__description
    visibility: hidden;
    margin-top: 4px
    font-size: 18px
    font-weight: bold;
    color: #ec3434
    +media('md')
      font-size: 12px
      margin-top: 6px
      padding-left: 105px

  &__text
    visibility: hidden;
    margin-top: 24px
    font-size: 30px
    line-height: 1.4
    +media('md')
      font-size: 20px
      line-height: 1.4
      margin-top: 18px
