.modulesList
  margin: 120px 0 121px
  +media('md')
    margin: 60px 0 60px

  &__title
    height: 130px
    background: #f6f6f6
    margin-bottom: 5px
    font-size: 54px
    color: #ec3434
    +media('md')
      font-size: 26px

    span
      position: relative;
      z-index: 1

      &:before
        content: ''
        position: absolute;
        background: $black
        left: -13px;
        right: -10px;
        bottom: 13px;
        height: 8px;
        z-index: -1;
        +media('md')
          left: -10px;
          right: -8px;
          bottom: 5px;
          height: 6px;

    +media('md')
      height: 70px
      margin-bottom: 5px

    .cWide
      height: 100%
      display: flex;
      align-items center

  &__items
    position: relative;

  &__item
    margin-bottom: 5px
    padding: 55px 0 59px
    background: #f6f6f6 url(img/modulesList-bg.jpg) 100% 0 repeat-y;
    +media('md')
      padding: 24px 0 24px
      background-size: 57%;

  &__header
    font-size: 80px
    line-height: 85px
    margin-left: -14px
    +media('md')
      font-size: 30px
      line-height: 34px
      hyphens: auto
      word-break break-word
      margin-left: -1px
      & br
        display: none;

  &__body
    max-height 0
    overflow: hidden;
    anim(.3s)

  &__inner
    position: relative;
    font-size: 30px;
    line-height: 1.4;
    padding: 33px 0 11px 14px;
    max-width: 1170px;
    z-index: 1
    +media('md')
      font-size: 20px
      padding: 10px 0 11px 0;

    > *:last-child
      margin-bottom: 0

  &__link
    display: inline-block;
    position: relative;
    margin-top: 20px
    font-size: 27px
    line-height: .025em
    font-weight: bold;
    color: $black
    padding: 0 10px 0 10px
    border: 0
    +media('md')
      font-size: 20px
      margin-top: 0

    &:before
      content: ''
      position: absolute;
      left: 0
      right: 0
      height: 8px
      background: #ec3434
      top: 5px
      z-index: -1
      anim()

    &:hover
      &:before
        top: 0
        height: 20px
