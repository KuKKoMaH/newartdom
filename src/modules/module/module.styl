.module
  padding-bottom: 30px
  +media('md')
    padding-bottom: 51px

  &__container
    max-width 1560px
    padding: 0 20px
    margin: 0 auto
    +media('md')
      padding: 0 15px

  &__title
    margin-bottom: 0;
    +media('md')
      margin-bottom: 0;

    &:before // Красная полоса
      width: 561px;
      height: 40px;
      left: 345px;
      top: 54px;
      z-index: -1;
      +media('md')
        left: 85px;
        top: 28px;
        height: 20px;
        width: 215px;

    & > span
      &:after // Красный круг
        width: 196px
        height: 196px
        top: -57px;
        left: -103px;
        +media('md')
          width: 76px
          height: 76px
          top: -18px;
          left: -47px;

      &:before // Черная полоска
        width: 100px
        height: 5px;
        top: 91px;
        left: 14px;
        +media('md')
          content: none

  &__rows
    margin-top: 115px
    +media('md')
      margin-top: 50px

    &--active
      & ^[0]__row:nth-child(n + 3)
        display: block;
        //visibility: visible;
        //opacity: 1
        //position: relative
        //z-index: auto;

  &__row
    position: relative;

    &:nth-child(n + 3)
      display: none;
      //visibility: hidden;
      //opacity: 0
      //position: absolute;
      //z-index: -1
      //anim()

    +media('md')
      margin-bottom: 63px
      &:last-child
        margin-bottom: 0

    &--reverse
      & ^[0]__info
        margin-left: 50%
        padding: 5% 0% 5% 6.5%;
        +media('md')
          margin-left: 0
          padding: 0 5px 33px

      & ^[0]__aside
        left: 0

      & ^[0]__nav
        right: auto;
        left: 200px

    &--full
      & ^[0]__info
        max-width 100%
        padding-left: 6.5%

    &--full&--reverce
      & ^[0]__info
        margin-left: 0
        max-width 100%
        padding-right: 6.5%


  //display: flex;

  &__info
    max-width 50%
    width: 100%
    font-size: 23px;
    line-height: 1.45;
    padding: 5% 6.5% 5% 0;
    +media('md')
      max-width none
      padding: 0 5px 33px
      font-size: 16px

    > *
      visibility: hidden;

    p
      margin-bottom: 2.7em

    *:last-child
      margin-bottom: 0

  &__header
    font-size: 80px
    line-height: 85px
    margin: -90px 0 60px -6px
    hyphens: auto;
    +media('md')
      font-size: 47px
      line-height: 47px
      margin: 0 0 30px

  &__aside
    position: absolute;
    height: 100%
    top: 0
    left: 50%
    width: 50%
    &.gallery
      height: 100%
      max-height 680px

    +media('md')
      position: static;
      left: 0
      width: 100%
      &.gallery
        height: 200px

  &__image
    height: 100%
    max-height 680px
    background-size: cover
    background-position: 50% 50%

  &__nav
    position: absolute;
    right: 200px
    bottom: -40px
    z-index: 1

  &__blockquote
    position: relative;
    background: $black;
    color: #ffffff
    font-size: 23px
    line-height: 1.45
    font-weight: bold;
    +media('md')
      font-size: 16px
      line-height: 1.5

    //height: 100%

    > div
      padding: 7% 0 3% 10.5%
      position: relative;
      z-index: 1
      max-width (1560 / 2) px
      overflow: hidden;
      +media('md')
        padding: 34px 20px 21px

      &:before, &:after
        content: ''
        position: absolute;

      &:after
        background: #ec3434
        width: 260px
        height: 260px
        border-radius: 50%
        left: 194px;
        top: 153px;
        z-index: -1
        +media('md')
          width: 270px
          height: 270px
          left: -77px;
          top: 129px;

    &:before, &:after
      content: ''
      position: absolute;

    &:before
      top: -39px;
      bottom: -40px;
      right: 208px;
      width: 31px
      background: #ec3434
      z-index: -1
      +media('md')
        top: -16px;
        bottom: -16px;
        right: 75px;
        width: 35px;


  &__more
    text-align: center;
    margin: 32px 0

    button
      position: relative;
      font-weight: bold;

      &:before
        content: ''
        position: absolute;
        z-index: -1
        left: -9px;
        right: -10px;
        height: 8px;
        bottom: 6px;
        background: #ec3434
        anim()

      &:hover
        &:before
          bottom: 0px
          height: 20px
